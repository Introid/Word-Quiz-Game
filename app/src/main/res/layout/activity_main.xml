<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/textScreen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/in_fight_battle"
    android:textColor="#fff"
    android:textSize="22sp"
    android:layout_marginTop="40dp"
    android:layout_gravity="center"
    />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/bgquestion"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#6C50EC"
            android:textSize="22sp"
            android:lineSpacingExtra="6dp"
            android:text="@string/guess_animals_in_english_a_lphabet"
            android:textAlignment="center"
            android:id="@+id/textQuestion"
            android:layout_marginTop="40dp"

            />

    </LinearLayout>

    <EditText
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/bgpurple"
        android:text="@string/bird"
        android:clickable="false"
        android:textColor="#6C50EC"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:padding="10dp"

        />



</LinearLayout>